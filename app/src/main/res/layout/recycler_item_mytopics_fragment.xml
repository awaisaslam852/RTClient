<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_selecter_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="94dp"
        android:layout_height="80dp"
        app:cardCornerRadius="7dp"
        android:elevation="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/z2"
                android:scaleType="fitXY"
                android:id="@+id/iv_recycler_item_mytopics_frag"
                />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/play_arrow"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:id="@+id/play_btn_recycler_item_mytopics_frag"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum, or ipsum as it is sometimes known"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:maxLines="2"
            android:id="@+id/tv1_title_recycler_item_mytopics_frag"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The passage is attributed to an unknown typesetter in the 15th century..... "
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:id="@+id/tv2_subtitle_recycler_item_mytopics_frag"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1A515151"
        android:layout_above="@+id/linear_btn_mytopice_none"
        android:layout_margin="3dp"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        >
        <ImageView
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:src="@drawable/bookmark_icon"
            android:layout_centerVertical="true"
            android:id="@+id/btn_bookmark_recycler_item_mytopics_frag"
            />
        <ImageView
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:src="@drawable/share_icon"
            android:id="@+id/btn_share_recycler_item_mytopics_frag"
            android:layout_toRightOf="@+id/btn_bookmark_recycler_item_mytopics_frag"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:weightSum="3"
        android:id="@+id/linear_btn_mytopice_none"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:padding="3dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/tv3_country_recycler_item_mytopics_frag"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/tv4_state_recycler_item_mytopics_frag"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/tv5_time_recycler_item_mytopics_frag"
            />




    </LinearLayout>


</RelativeLayout>